{
  "compilerOptions": {
    "target": "es2017",
    "rootDir": "../",
    "baseUrl": "../",
    "outDir": "../dist",
    "module": "commonJs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  },
  "include": ["**/*"],
  "exclude": ["tsconfig.json"]
}